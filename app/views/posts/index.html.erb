<h1>All posts</h1>

<table id = 'allPosts'>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= link_to post.title, post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to image_tag('DeleteRed.png', :class => 'deleteImage'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path, :class => 'navigationLink' %>
